{
  "name": "validate-commit-action",
  "version": "1.0.0",
  "description": "Validates a commit with the OpenPGP keys server",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license LICENSE",
    "all": "npm run build && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sequring/commit-validation-action"
  },
  "keywords": [
    "github",
    "action",
    "validate",
    "commit",
    "openpgp"
  ],
  "author": "Valentyn Nastenko",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "axios": "^0.24.0",
    "node-fetch": "^3.3.0",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "@types/node": "^18.11.0",
    "@types/request": "^2.48.8",
    "@vercel/ncc": "^0.31.1",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.4.4"
  }
}
